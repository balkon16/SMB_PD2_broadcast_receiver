<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hfad.pracadomowanr2broadcastreceiver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PracaDomowaNr2BroadcastReceiver">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ProductBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.hfad.pracadomowanr2.produkty.NEW_PRODUCT_ADDED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.hfad.pracadomowanr2broadcastreceiver.NotificationService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>